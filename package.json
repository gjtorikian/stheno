{
  "name": "@yettoapp/stheno",
  "version": "0.1.9",
  "description": "An opinionated, powerful CodeMirror configuration by Yetto",
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "cjs",
    "README.md",
    "CHANGELOG.md",
    "docs"
  ],
  "scripts": {
    "package": "rolldown -c && tsc --emitDeclarationOnly",
    "tsc": "tsc",
    "build": "cm-buildhelper src/index.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:all": "vitest run && playwright test",
    "dev": "vite ./dev --host",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check"
  },
  "keywords": [
    "codemirror",
    "markdown",
    "json",
    "text editor"
  ],
  "author": {
    "name": "Yetto",
    "email": "info@yetto.app",
    "url": "https://yetto.app"
  },
  "contributors": [
    {
      "name": "@birdcar",
      "url": "https://github.com/birdcar"
    },
    {
      "name": "@gjtorikian",
      "url": "https://github.com/gjtorikian"
    }
  ],
  "license": "AGPL",
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-liquid": "^6.3.0",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/search": "^6.5.11",
    "@fontsource-variable/ibm-plex-sans": "^5.2.8",
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@tailwindcss/typography": "^0.5.19",
    "@yettoapp/lezer-jsonc": "^0.1.0",
    "@yettoapp/lezer-liquid": "^0.0.10",
    "emoji-provider": "^1.0.6",
    "marked": "^17.0.1"
  },
  "peerDependencies": {
    "@codemirror/state": "^6.1.4",
    "@codemirror/view": "^6.6.0"
  },
  "devDependencies": {
    "@codemirror/buildhelper": "^1.0.2",
    "@github/markdown-toolbar-element": "^2.2.3",
    "@hotwired/stimulus": "^3.2.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/codemirror": "^5.60.17",
    "@types/node": "^24.10.1",
    "autoprefixer": "^10.4.22",
    "hotkeys-js": "^3.13.15",
    "jsdom": "^27.2.0",
    "os-browserify": "^0.3.0",
    "oxfmt": "^0.15.0",
    "oxlint": "^1.30.0",
    "postcss": "^8.5.6",
    "rolldown": "^1.0.0-beta.9",
    "stimulus-use": "^0.52.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "4.0.14",
    "vitest-dom": "^0.1.1"
  }
}
